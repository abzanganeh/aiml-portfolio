# Flask Portfolio Environment Configuration
# Copy this file to .env and update the values

# Application Environment (development, production, testing)
FLASK_CONFIG=development

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-here-make-it-long-and-random

# Flask Settings
FLASK_DEBUG=True
FLASK_HOST=127.0.0.1
FLASK_PORT=5001

# Production Settings (uncomment for production)
# FLASK_CONFIG=production
# FLASK_DEBUG=False
# SECRET_KEY=your-production-secret-key-here
# FLASK_HOST=0.0.0.0
# FLASK_PORT=80

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Security Headers (optional customization)
CSP_POLICY=default-src 'self'; style-src 'self' 'unsafe-inline' cdnjs.cloudflare.com; script-src 'self' cdnjs.cloudflare.com

# Rate Limiting (if implemented)
RATE_LIMIT_STORAGE_URL=memory://
DEFAULT_RATE_LIMIT=1000 per hour
